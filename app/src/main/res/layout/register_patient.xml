<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/confirm_pass_regP"
        android:layout_width="309dp"
        android:layout_height="41dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/inputfield"
        android:ems="10"
        android:hint="    confirm password"

        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_registerP" />

    <EditText
        android:id="@+id/username_registerT"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/inputfield"
        android:ems="10"
        android:hint="    username"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_registerP"
        android:layout_width="311dp"
        android:layout_height="42dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/inputfield"
        android:ems="10"
        android:hint="    password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/register_btnP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:text="Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_pass_regP" />

    <TextView
        android:id="@+id/username_taken_txtP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D31818"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/username_registerT"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toStartOf="@+id/username_registerT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <TextView
        android:id="@+id/password_not_matchP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B91717"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="@+id/confirm_pass_regP"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="@+id/confirm_pass_regP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="257dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"

        android:layout_marginTop="132dp"
        android:text="The username should be nothing related to your real name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="202dp"
        android:layout_height="20dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="3dp"
        android:text="Please double check your form!"
        android:textColor="#FA1706"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_pass_regP" />

</androidx.constraintlayout.widget.ConstraintLayout>